@model IEnumerable<ProyectoFinal.Models.Genero>

<h1> @this.ViewBag.TituloPagina </h1>

<main class="container">
    <div class="text-right">

        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Género</th>
                    <th>Descripción</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var l in this.Model.OrderBy(i => i.Genre))
                {
                    <tr>
                        <td>@l.Genre</td>
                        <td>@l.Descripcion</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</main>